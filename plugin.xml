<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="cordova-plugin-promotion-downloadapp"
    version="1.0.30">
	
    <name>Cordova DownloadApp plugin</name>
    <description>Cordova DownloadApp plugin</description>
    <author>Sang Ki Kwon (Cranberrygame)</author>		
    <license>MIT</license>
    <keywords>cordova,plugin,downloadapp</keywords>
    <repo>https://github.com/cranberrygame/cordova-plugin-promotion-downloadapp</repo>
    <issue>https://github.com/cranberrygame/cordova-plugin-promotion-downloadapp/issues</issue> 	
	<engines>
	    <engine name="cordova" version=">=3.0.0" />
	</engines>
	
    <dependency id="org.apache.cordova.inappbrowser" />	
	
    <js-module src="www/downloadapp.js">
        <clobbers target="window.downloadapp"/>
    </js-module>
	
    <!-- wp8 -->
    <platform name="wp8">
        <config-file target="config.xml" parent="/*">
            <feature name="DownloadApp">
                <param name="wp-package" value="DownloadApp"/>
            </feature>
        </config-file>

        <source-file src="src/wp8/DownloadApp.cs" />
    </platform>	
</plugin>